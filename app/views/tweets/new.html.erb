<%if user_signed_in? %>
       <div class="card text-center">
              <div class="card-body">
                     <%= form_with(model: @tweet, local: true) do |f| %>
                            <%= f.label "Twitea algo!" %><br>
                            <%= f.text_area :content %><br>
                            <%= f.submit "Subir" %>
                     <%end%>
              </div>
       </div>
<%else%>
       <h2 class="text-center">Si deseas Twiter debes ingresar o crearte una cuenta</h1>
<%end%>